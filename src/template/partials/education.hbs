<div class="col mx-auto">
    <section>
        <ul class="timeline-with-icons">
            {{#each (sortByDate resume.education resume.certificates)}}
                <li class="timeline-item mb-5">
                    <span class="timeline-icon">
                        <a href="{{url}}" target="_blank">
                            {{#if logo}}
                                <img src="{{logo}}" alt="{{default institution issuer}} logo" height="32" width="32">
                            {{else}}
                                <i class="fa-solid {{#if institution}}fa-graduation-cap{{else}}fa-file-lines{{/if}} fa-sm fa-fw"></i>
                            {{/if}}
                        </a>
                    </span>

                    <h5 class="fw-bold">{{default institution issuer}} - {{default area name}}</h5>

                    <p class="text-muted mb-2 fw-bold">
                        {{#if studyType}}
                            {{studyType}} -
                        {{/if}}

                        {{default (formatDate startDate ../resume.meta.lang) (formatDate date ../resume.meta.lang)}}

                        {{#if (formatDate endDate ../resume.meta.lang)}}
                            <i class="fa-solid fa-arrow-right"></i>
                            {{formatDate endDate ../resume.meta.lang}}
                        {{/if}}
                    </p>

                    {{#if courses}}
                        <ul class="p-0">
                            {{#each courses}}
                                <li>{{.}}</li>
                            {{/each}}
                        </ul>
                    {{/if}}
                </li>
            {{/each}}
        </ul>
    </section>
</div>
